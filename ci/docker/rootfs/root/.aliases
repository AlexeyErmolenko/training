alias ll='ls -la'
alias artisan='php /app/artisan'
alias composer='php -d xdebug.remote_enable=0 /app/composer.phar'
alias tests='php /app/vendor/bin/phpunit'
alias clearlog='echo "" > /app/storage/logs/laravel.log'
alias clearcaches='rm -f /app/bootstrap/cache/*.php && artisan cache:clear'
alias tinker='php -d pcre.jit=0 /app/artisan tinker'
alias fresh='clearcaches && artisan queue:restart'
alias fixpermissions='bash /etc/cont-init.d/01-set-permissions'
alias migrate='artisan migrate'
alias routes='artisan route:list && artisan api:routes'
